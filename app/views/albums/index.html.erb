<p id="notice"><%= notice %></p>

<h1>Listing Albums</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th width="70%">Name</th>
      <th colspan="3"><div align="center">Action</div></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path, :class => "btn btn-danger" %>
